{
  "compilerOptions": {
    "jsx": "react",
    "baseUrl": "src",
    "paths": {
      "@Auth": ["auth/index"],
      "@Auth/*": ["auth/*"],

      "@Components": ["components/index"],
      "@Components/*": ["components/*"],

      "@Hooks": ["hooks/index"],
      "@Hooks/*": ["hooks/*"],

      "@Journal": ["journal/index"],
      "@Journal/*": ["journal/*"],

      "@Router": ["router/index"],
      "@Router/*": ["router/*"],

      "@Store": ["store/index"],
      "@Store/*": ["store/*"],

      "@Theme": ["theme/index"],
      "@Theme/*": ["theme/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "public"]
}
