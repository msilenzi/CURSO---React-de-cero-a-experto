{
  "compilerOptions": {
    "module": "ES6",
    "jsx": "react",
    "baseUrl": "src",
    "paths": {
      "@Components": ["components/index"],
      "@Components/*": ["components/*"],
      "@Hooks": ["hooks/index"],
      "@Hooks/*": ["hooks/*"],
      "@UI": ["ui/index"],
      "@UI/*": ["ui/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "public"]
}
